{
    "name": "hexlet/code",
    "description": "The program calculates the differences between two files in the specified format.",
    "bin": ["bin/gendiff"],
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/Parsers.php",
            "src/Differ.php",
            "src/InterimData.php",
            "src/Formatters/stylish.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Differ\\Test\\": "tests"
        }
    },
    "authors": [
        {
            "name": "StanislavSol",
            "email": "vandemar@bk.ru"
        }
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.11",
        "phpunit/phpunit": "^11.5"
    }
}
