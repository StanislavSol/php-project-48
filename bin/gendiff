#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
        require_once $autoloadPath1;
} else {
        require_once $autoloadPath2;
}

use function Differ\Parsers\getParseData;
use function Differ\Differ\getDiffData;
use function Differ\Differ\Formatters\getStylishFormat;

$doc = <<<DOC
gendiff -h

Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$args = Docopt::handle($doc);
$filePathOne = $args->args['<firstFile>'];
$filePathTwo = $args->args['<secondFile>'];
[$fileOne, $fileTwo] = getParseData($filePathOne, $filePathTwo);
$dataDiff = getDiffData($fileOne, $fileTwo);
print_r(getStylishFormat($dataDiff));
